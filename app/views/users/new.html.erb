<%= form_for :user, url:'/users/new', method:'post' do |user_form|  %>
  <%= user_form.label :name %><br>
  <%= user_form.text_field :name %><br><br>
  <%= user_form.label :height, 'Height (in inches)' %><br>
  <%= user_form.text_field :height %><br><br>
  <%= user_form.label :happiness, 'How happy are you? (1-5 scale)' %><br>
  <%= user_form.text_field :happiness %><br><br>
  <%= user_form.label :nausea, 'How nauseous are you? (1-5 scale)' %><br>
  <%= user_form.text_field :nausea %><br><br>
  <%= user_form.label :tickets, 'How many dollars are in your pocket?' %><br>
  <%= user_form.text_field :tickets %><br><br>
  <%= user_form.label :admin, 'Check box if you are a theme park owner' %><%= user_form.check_box :admin %><br><br>
  <%= user_form.label :password %><br><br>
  <%= user_form.password_field :password %><br>
  <br>
  <%= user_form.submit 'Create User' %><br>




<% end %>
