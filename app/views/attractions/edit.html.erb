<h1>Edit Attraction</h1>

<%= form_for @attraction do |f| %> 
    <%= f.label :name %> 
    <%= f.text_field :name %><br> 

    <%= f.label "Height Requirement (in inches)" %> 
    <%= f.number_field :min_height %><br>

    <%= f.label "How fun is it? (1-5 scale)" %> 
    <%= f.number_field :happiness_rating %><br

    <%= f.label "How nausea-inducing is it? (1-5 scale)" %> 
    <%= f.number_field :nausea_rating %><br>

    <%= f.label "How man tickets does it cost?" %> 
    <%= f.number_field :tickets %><br>

    <%= f.submit "Update Attraction" %>
<% end %>