<h1><%= @attraction.name %></h1>

<ul>
    <li><strong>Total Number of Users: </strong><%= @attraction.users.count %></li>
    <li><strong>Ticket Requirement: </strong><%= @attraction.tickets %></li>
    <li><strong>Height Requirement: </strong><%= @attraction.min_height %> inches</li>
    <li><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></li>
    <li><strong>Happiness Rating: </strong><%= @attraction.happiness_rating %></li>
</ul>

<br><br>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
    <%= form_tag(rides_path, method: "post") do %>
        <%= hidden_field_tag name="ride[user_id]", value=current_user.id %>
        <%= hidden_field_tag name="ride[attraction_id]", value=@attraction.id %>
        <%= submit_tag "Go on this ride" %>
    <% end %>
<% end %>