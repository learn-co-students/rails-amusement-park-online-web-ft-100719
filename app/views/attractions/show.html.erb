<h1>Attractions#show</h1>
<h2>All about <%= @attraction.name %> </h2>
<p> Nausea Rating: <%= @attraction.nausea_rating %> </p>
<p> Happiness Rating: <%= @attraction.happiness_rating %> </p>
<p> Tickets Needed: <%= @attraction.tickets %> </p>
<p> Min Height: <%= @attraction.min_height %> </p>
<br>

<% if current_user.admin %>
    <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
  <% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %><br />
        <%= f.hidden_field :attraction_id %><br />
        <%= f.submit "Go on this ride", class:"btn btn-light" %>
    <% end %>
    
<% end %>
