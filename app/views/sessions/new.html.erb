<h1>Log In</h1>

<%= form_tag(signin_path) do %>
    <%= label_tag "user[name]", "Name" %>
    <%= select_tag "user[name]", options_from_collection_for_select(User.all, :id, :name), include_blank: true %><br><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br><br>

    <%= submit_tag 'Sign In' %>
<% end %>

<br><br>

<%= link_to "Don't have an account yet? Sign Up", new_user_path %>